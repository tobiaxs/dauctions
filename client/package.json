{
    "name": "dauctions",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "autoprefixer": "^10.4.4",
        "postcss": "^8.4.12",
        "react": "^18.0.0",
        "react-dom": "^18.0.0",
        "react-error-boundary": "^3.1.4",
        "react-router-dom": "^6.3.0",
        "react-scripts": "5.0.1",
        "tailwindcss": "^3.0.24",
        "typescript": "^4.6.3"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.16.4",
        "@testing-library/react": "^13.0.1",
        "@testing-library/user-event": "^13.5.0",
        "@types/jest": "^27.4.1",
        "@types/node": "^16.11.26",
        "@types/react": "^18.0.3",
        "@types/react-dom": "^18.0.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.3.7",
        "prettier": "^2.6.2"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test --watchAll=false --coverage",
        "eject": "react-scripts eject",
        "lint:prettier": "prettier --write **/*.{ts,tsx,js,jsx,html}",
        "lint": "yarn lint:prettier"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "lint-staged": {
        "*.+(ts|tsx|js)": [
            "prettier --write"
        ],
        "*.+(ts|tsx|js|json)": [
            "prettier --write"
        ]
    },
    "jest": {
        "coveragePathIgnorePatterns": [
            "src/index.tsx"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 100,
                "functions": 100,
                "lines": 100,
                "statements": 100
            }
        }
    }
}
